<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"
    tools:context=".mine_f.MistakenActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/login_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="每日刷题"
        app:subtitle="我的错题"
        android:theme="@style/AppToobarTitleTheme"
        app:popupTheme="@style/AppToobarPopupTheme"
        android:background="@android:color/white">
    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#f5f5f5"/>

    <LinearLayout
        android:id="@+id/layout_miataken_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mistaken_btn_choice"
            style="@style/daily_style"
            android:drawableLeft="@mipmap/xz2"
            android:text="做错的选择题" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="#f5f5f5"/>

    <LinearLayout
        android:id="@+id/layout_mistaken_operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mistaken_btn_operation"
            style="@style/daily_style"
            android:drawableLeft="@mipmap/cz2"
            android:text="做错的操作题" />
    </LinearLayout>

</LinearLayout>