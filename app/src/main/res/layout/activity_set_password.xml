<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/set_password_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="密码管理"
        app:subtitle="修改密码"
        android:theme="@style/AppToobarTitleTheme"
        app:popupTheme="@style/AppToobarPopupTheme"
        android:background="#f5f5f5">
    </androidx.appcompat.widget.Toolbar>
    <ImageView
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:id="@+id/head2"
        android:layout_width="90dp"
        android:layout_height="90dp">
    </ImageView>
    <TextView
        android:id="@+id/name2"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="昵称"
        android:textSize="18dp"
        android:layout_gravity="center">
    </TextView>
    <EditText
        android:id="@+id/OldPassWord"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:padding="8dp"
        android:singleLine="true"
        android:inputType="textPassword"
        android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:hint=" 原密码:"
        android:background="@drawable/edit_login">
    </EditText>
    <EditText
        android:id="@+id/NewPassWord1"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:singleLine="true"
        android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:hint=" 输入6位数密码:"
        android:background="@drawable/edit_login">
    </EditText>
    <EditText
        android:inputType="textPassword"
        android:id="@+id/NewPassWord2"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:singleLine="true"
        android:hint=" 确认密码:"
        android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:background="@drawable/edit_login">
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/FixSet"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="确定"
            android:textSize="18dp"
            android:background="@drawable/btn_login">
        </Button>
        <Button
            android:id="@+id/Quit"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="取消"
            android:textSize="18dp"
            android:background="@drawable/btn_login">
        </Button>
    </LinearLayout>

</LinearLayout>