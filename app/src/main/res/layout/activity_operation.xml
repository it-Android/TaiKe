<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context=".mine_f.OperationActivity"
    android:id="@+id/daily_operation">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/login_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="每日刷题"
        app:subtitle="操作题"
        android:theme="@style/AppToobarTitleTheme"
        app:popupTheme="@style/AppToobarPopupTheme"
        android:background="@android:color/white">
    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#f5f5f5"/>

    <LinearLayout
        android:id="@+id/layout_choice_simple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/operation_btn_simple"
            style="@style/daily_style"
            android:drawableLeft="@mipmap/jd2"
            android:text="基本操作" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="#f5f5f5"/>

    <LinearLayout
        android:id="@+id/layout_choice_basic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/operation_btn_basic"
            style="@style/daily_style"
            android:drawableLeft="@mipmap/jb2"
            android:text="简单应用" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="#f5f5f5"/>

    <LinearLayout
        android:id="@+id/layout_choice_complex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/operation_btn_complex"
            style="@style/daily_style"
            android:drawableLeft="@mipmap/zh2"
            android:text="综合应用" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="#f5f5f5"/>

</LinearLayout>