<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/minedata"
        android:clickable="true"
        android:background="@drawable/linerlayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/min_head1"
            android:layout_marginLeft="24dp"
            android:layout_width="80dp"
            android:layout_height="80dp">
        </ImageView>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:textColor="@android:color/black"
                android:text="昵称">
            </TextView>
            <TextView
                android:id="@+id/sex_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="性别"
                android:textColor="@android:color/background_dark"
                >
            </TextView>
        </LinearLayout>
    </LinearLayout>
    <!--每日打卡-->
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#f5f5f5"/>

    <LinearLayout
        android:clickable="true"
        android:id="@+id/clock_in_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/mine_btn_clock"
            style="@style/daily_style"
            android:drawableLeft="@mipmap/dk1"
            android:text="每日打卡" />
    </LinearLayout>

    <!--我的等级-->
    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="#f5f5f5"/>
    <LinearLayout
        android:clickable="true"
        android:id="@+id/mine_in_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/mine_btn_note"
            style="@style/daily_style"
            android:drawableLeft="@mipmap/dj1"
            android:text="学习笔记" />
    </LinearLayout>

    <!--切换二级类型-->
    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="#f5f5f5"/>
    <LinearLayout
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/mine_btn_change"
            style="@style/daily_style"
            android:drawableLeft="@mipmap/qh1"
            android:text="二级切换" />
            <!--
        <Spinner
            android:layout_toRightOf="@id/mine_btn_dj"
            android:background="@drawable/linerlayout"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:entries="@array/spingarr"
            >
        </Spinner>   -->
    </LinearLayout>

    <!--修改密码-->
    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="#f5f5f5"/>

    <LinearLayout
        android:clickable="true"
        android:id="@+id/setpassword_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/mine_btn_setpassword"
            style="@style/daily_style"
            android:drawableLeft="@mipmap/gm1"
            android:text="密码管理" />
    </LinearLayout>

    <!--退出登录-->
   <!-- <LinearLayout
        android:clickable="true"
        android:id="@+id/Logout"
        android:gravity="center_vertical"
        android:layout_marginTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:textSize="20dp"
            android:text="退出登录"></TextView>
    </LinearLayout>-->
</LinearLayout>
