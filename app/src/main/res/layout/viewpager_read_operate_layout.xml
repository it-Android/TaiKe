<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/read_tv_operate_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="18sp"
                android:text="我是题目"/>
            <ImageView
                android:id="@+id/read_iv_operate_photo"
                android:layout_width="match_parent"
                android:padding="20dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/read_tv_operate_material"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#000"
                android:text="初始值"/>


            <CheckBox
                android:id="@+id/read_cb_operate_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:button="@null"
                android:paddingRight="8sp"
                android:paddingLeft="8sp"
                android:paddingBottom="6sp"
                android:paddingTop="6sp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/check_answer"
                android:text="答案" />

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/read_tv_operate_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#000"
                android:visibility="gone"
                android:text="我是答案"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
