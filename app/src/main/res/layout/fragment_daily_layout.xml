<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_daily_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/daily_btn_choice"
            style="@style/daily_style"
            android:drawableLeft="@mipmap/xz2"
            android:text="选择题" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="#f5f5f5"/>

    <LinearLayout
        android:id="@+id/layout_daily_operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/daily_btn_operation"
            style="@style/daily_style"
            android:drawableLeft="@mipmap/cz2"
            android:text="操作题" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="#f5f5f5"/>

    <LinearLayout
        android:id="@+id/layout_daily_collect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/daily_btn_collect"
            style="@style/daily_style"
            android:drawableLeft="@mipmap/sc2"
            android:text="我的收藏" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="#f5f5f5"/>

    <LinearLayout
        android:id="@+id/layout_daily_mistaken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/daily_btn_mistaken"
            style="@style/daily_style"
            android:drawableLeft="@mipmap/cw2"
            android:text="我的错题" />
    </LinearLayout>
</LinearLayout>
