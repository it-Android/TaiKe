<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mine_f.ChoiceActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/login_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="每日刷题"
        app:subtitle="选择题"
        android:theme="@style/AppToobarTitleTheme"
        app:popupTheme="@style/AppToobarPopupTheme"
        android:background="@android:color/white">
    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#f5f5f5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:paddingLeft="14dp"
        android:paddingTop="14dp"
        android:paddingRight="14dp">

        <CheckBox
            android:id="@+id/check_choice_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:button="@null"
            android:background="@null"
            android:drawableLeft="@drawable/check_choice_type"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/choice_type_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:text="Java语言的特点和实现机制"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="20dp"
                android:background="#f5f5f5"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

            <LinearLayout
                android:id="@+id/choice_type_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/choice_type_body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:background="@android:color/white"
                    android:paddingBottom="10dp"
                    android:gravity="center_vertical"
                    android:text="Java体系结构"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#f5f5f5"/>
                <TextView
                    android:id="@+id/choice_type_body2"
                    style="@style/choice_type_body_style"
                    android:text="JDK目录结构"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#f5f5f5"/>
                <TextView
                    android:id="@+id/choice_type_body3"
                    style="@style/choice_type_body_style"
                    android:text="Java的API结构"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#f5f5f5"/>
                <TextView
                    android:id="@+id/choice_type_body4"
                    style="@style/choice_type_body_style"
                    android:text="开发环境设置"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#f5f5f5"/>
                <TextView
                    android:id="@+id/choice_type_body5"
                    style="@style/choice_type_body_style"
                    android:text="Java程序结构"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#f5f5f5"/>
                <TextView
                    android:id="@+id/choice_type_body6"
                    style="@style/choice_type_body_style"
                    android:text="Java语言中面向对象的特征"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#f5f5f5"/>
                <TextView
                    android:id="@+id/choice_type_body7"
                    style="@style/choice_type_body_style"
                    android:text="面向对象编程的基本概念和特征"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#f5f5f5"/>
                <TextView
                    android:id="@+id/choice_type_body8"
                    style="@style/choice_type_body_style"
                    android:text="类的基本组成和使用"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#f5f5f5"/>
                <TextView
                    android:id="@+id/choice_type_body9"
                    style="@style/choice_type_body_style"
                    android:text="对象的生成、使用和删除"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#f5f5f5"/>
                <TextView
                    android:id="@+id/choice_type_body10"
                    style="@style/choice_type_body_style"
                    android:text="接口与包"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#f5f5f5"/>
                <TextView
                    android:id="@+id/choice_type_body11"
                    style="@style/choice_type_body_style"
                    android:text="Java简单数据类型及运算"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#f5f5f5"/>
                <TextView
                    android:id="@+id/choice_type_body12"
                    style="@style/choice_type_body_style"
                    android:text="变量和常量"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#f5f5f5"/>
                <TextView
                    android:id="@+id/choice_type_body13"
                    style="@style/choice_type_body_style"
                    android:text="基本数据类型及转换"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#f5f5f5"/>
                <TextView
                    android:id="@+id/choice_type_body14"
                    style="@style/choice_type_body_style"
                    android:text="Java类库中对简单数据类型的类包装"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#f5f5f5"/>
                <TextView
                    android:id="@+id/choice_type_body15"
                    style="@style/choice_type_body_style"
                    android:text="运算符和表达式运算"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#f5f5f5"/>
                <TextView
                    android:id="@+id/choice_type_body16"
                    style="@style/choice_type_body_style"
                    android:text="数组和字符串"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#f5f5f5"/>
                <TextView
                    android:id="@+id/choice_type_body17"
                    style="@style/choice_type_body_style"
                    android:text="Java语言的基本语句"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#f5f5f5"/>
                <TextView
                    android:id="@+id/choice_type_body18"
                    style="@style/choice_type_body_style"
                    android:text="表达式语句"/>

